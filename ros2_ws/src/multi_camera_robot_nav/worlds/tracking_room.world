        </visual>
      </link>
      <pose>0.0 1.2 0.3 0 0 0</pose>
    </model>

    <!-- Camera Mount 1 (NE corner, looking at center at 45°) -->
    <model name="camera_mount_1">
      <static>true</static>
      <link name="link">
        <!-- Camera body -->
        <visual name="camera_body">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <box><size>0.08 0.08 0.06</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
        <!-- Camera lens -->
        <visual name="camera_lens">
          <pose>0 0 -0.04 0 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.02</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 0.0 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>
        <!-- Depth camera sensor -->
        <sensor name="depth_camera_1" type="depth">
          <pose>0 0 0 0 0 0</pose>
          <update_rate>30</update_rate>
          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>10.0</far>
            </clip>
          </camera>
          <plugin name="depth_camera_plugin_1" filename="libgazebo_ros_camera.so">
            <ros>
              <namespace>/cameras</namespace>
              <remapping>image_raw:=camera_1/image_raw</remapping>
              <remapping>depth/image_raw:=camera_1/depth/image_raw</remapping>
              <remapping>camera_info:=camera_1/camera_info</remapping>
              <remapping>points:=camera_1/points</remapping>
            </ros>
            <camera_name>camera_1</camera_name>
            <frame_name>camera_1_link</frame_name>
            <min_depth>0.1</min_depth>
            <max_depth>10.0</max_depth>
          </plugin>
        </sensor>
      </link>
      <!-- Position: NE corner, 2.4m high, tilted 45° down looking at center -->
      <!-- Rotation: pitch=-45° to look down, yaw=225° (pointing toward center) -->
      <pose>1.8 1.8 2.4 0 0.785 -2.356</pose>
    </model>

    <!-- Camera Mount 2 (NW corner) -->
    <model name="camera_mount_2">
      <static>true</static>
      <link name="link">
        <visual name="camera_body">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <box><size>0.08 0.08 0.06</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
        <visual name="camera_lens">
          <pose>0 0 -0.04 0 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.02</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
