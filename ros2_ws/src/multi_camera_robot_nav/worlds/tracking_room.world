    <!-- Additional indoor lighting -->
    <light name="ceiling_light_1" type="point">
      <pose>0 0 2.3 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
