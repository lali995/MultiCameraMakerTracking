    <!-- Ceiling -->
    <model name="ceiling">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>4.0 4.0 0.02</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>4.0 4.0 0.02</size></box>
