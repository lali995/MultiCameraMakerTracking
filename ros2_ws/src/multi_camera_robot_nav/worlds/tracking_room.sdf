            </depth_camera>
            <clip>
              <near>0.1</near>
              <far>10.0</far>
            </clip>
          </camera>
        </sensor>
      </link>
    </model>

    <!-- Camera 4 (SE corner) -->
    <model name="camera_4">
      <static>true</static>
      <pose>1.8 -1.8 2.4 0 0.785 2.356</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>0.08 0.08 0.06</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
        <sensor name="rgbd_camera" type="rgbd_camera">
          <update_rate>30</update_rate>
          <topic>/cameras/camera_4</topic>
          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
